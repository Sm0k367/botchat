{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ANALYTICS_TRACKING_ID": "G-XXXXXXXXXX",
    "ENABLE_ANALYTICS": "true",
    "THREEJS_VERSION": "r128",
    "GSAP_VERSION": "3.12.2",
    "HOWLER_VERSION": "2.2.4",
    "SOCKETIO_VERSION": "4.7.2"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://cdn.socket.io; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https://fonts.googleapis.com; connect-src 'self' https://cdn.socket.io"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "trailingSlash": true,
  "cleanUrls": true,
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840],
    "formats": ["image/avif", "image/webp"],
    "minimumCacheTTL": 31536000,
    "dangerouslyAllowSVG": true,
    "contentDispositionType": "inline",
    "loader": "default"
  },
  "git": {
    "deploymentMessage": "Deploying Epic Tech AI Chat with 3D graphics and AI functionality"
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "static",
  "frameworkVersion": 2,
  "regions": ["iad1"],
  "usage": {
    "builds": true,
    "functions": false,
    "edgeFunctions": false,
    "crons": false
  },
  "logging": {
    "level": "info",
    "prefix": "[EpicTechAIChat]"
  },
  "analytics": {
    "enabled": true,
    "sampleRate": 1.0,
    "includeCookies": true,
    "includeQueryParams": false
  },
  "performance": {
    "budgets": [
      {
        "type": "asset",
        "path": "**/*.{js,css,html}",
        "maxSize": "200kB"
      },
      {
        "type": "media",
        "path": "public/**/*",
        "maxSize": "500kB"
      }
    ],
    "prefetch": true,
    "cacheControl": {
      "staticAssets": "public,max-age=31536000,immutable",
      "dynamicAssets": "no-cache"
    }
  },
  "accessibility": {
    "enable": true,
    "rules": {
      "aria-roles": "warn",
      "button-name": "warn",
      "color-contrast": "warn",
      "duplicate-id": "warn",
      "heading-level": "warn",
      "image-alt": "warn",
      "input-button-name": "warn",
      "label": "warn",
      "link-name": "warn",
      "list": "warn",
      "meta-viewport": "warn",
      "nested-interactive": "warn",
      "role-has-required-aria-props": "warn",
      "scope-role": "warn",
      "tabindex": "warn"
    }
  },
  "errorHandling": {
    "enable": true,
    "retry": {
      "maxAttempts": 3,
      "delay": 1000,
      "exponentialBackoff": true
    },
    "timeout": {
      "api": 30000,
      "static": 10000
    },
    "logging": {
      "errors": true,
      "warnings": true,
      "debug": false
    }
  }
}
